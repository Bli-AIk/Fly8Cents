<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Fly8Cents.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Fly8Cents.Views.TextSettingsView"
             x:DataType="vm:TextSettingsViewModel">
    <Grid Margin="10" RowDefinitions="Auto,*,Auto,*">
        <!-- 开头文本 -->
        <TextBlock Grid.Row="0" Text="开头文本" FontSize="16" HorizontalAlignment="Center" Margin="0,5"/>
        <TextBox Grid.Row="1" AcceptsReturn="True" Margin="5"
                 Text="{Binding TextSettings.StartText, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />

        <!-- 结尾文本 -->
        <TextBlock Grid.Row="2" Text="结尾文本" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,5"/>
        <TextBox Grid.Row="3" AcceptsReturn="True" Margin="5"
                 Text="{Binding TextSettings.EndText, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
    </Grid>
</UserControl>