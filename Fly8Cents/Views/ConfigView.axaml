<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Fly8Cents.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Fly8Cents.Views.ConfigView"
             x:DataType="vm:ConfigViewModel">
    <Grid Margin="10" RowDefinitions="Auto,*" ColumnDefinitions="*,*">
        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5" Padding="5">
            <Grid RowDefinitions="Auto,Auto,Auto">
                <TextBlock Text="黑名单关键词" FontWeight="Bold" Margin="0,0,0,5" Grid.Row="0"
                           HorizontalAlignment="Center" />

                <ListBox ItemsSource="{Binding Config.BlackList}"
                         SelectedItem="{Binding SelectedBlackItem}"
                         Grid.Row="1" Height="150" />

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0" Grid.Row="2">
                    <TextBox Width="125" Text="{Binding NewBlackItem, Mode=TwoWay}" />
                    <Button Content="添加" Margin="5,0"
                            Command="{Binding AddBlackCommand}" />
                    <Button Content="删除" Margin="5,0"
                            Command="{Binding RemoveBlackCommand}" />
                    <Button Content="清空" Margin="5,0"
                            Command="{Binding ClearBlackCommand}" />
                    <CheckBox Content="同音检查" Margin="5,0"
                              IsChecked="{Binding Config.IsBlackHomonym, Mode=TwoWay}" />
                </StackPanel>
            </Grid>
        </Border>

        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5" Padding="5"
                Grid.Row="0" Grid.Column="1">
            <Grid RowDefinitions="Auto,Auto,Auto">
                <TextBlock Text="白名单关键词" FontWeight="Bold" Margin="0,0,0,5" Grid.Row="0"
                           HorizontalAlignment="Center" />

                <ListBox ItemsSource="{Binding Config.WhiteList}"
                         SelectedItem="{Binding SelectedWhiteItem}"
                         Grid.Row="1" Height="150" />

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0" Grid.Row="2">
                    <TextBox Width="125" Text="{Binding NewWhiteItem, Mode=TwoWay}" />
                    <Button Content="添加" Margin="5,0"
                            Command="{Binding AddWhiteCommand}" />
                    <Button Content="删除" Margin="5,0"
                            Command="{Binding RemoveWhiteCommand}" />
                    <Button Content="清空" Margin="5,0"
                            Command="{Binding ClearWhiteCommand}" />
                    <CheckBox Content="同音检查" Margin="5,0"
                              IsChecked="{Binding Config.IsWhiteHomonym, Mode=TwoWay}" />
                </StackPanel>
            </Grid>
        </Border>
        
        <Grid Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0" Margin="5"
              RowDefinitions="Auto,Auto,Auto,Auto,*">
            <CheckBox Content="对剩余评论进行 AI 检索"
                      Grid.Row="0"
                      IsChecked="{Binding IsUseAi, Mode=TwoWay}" />
            <TextBox Grid.Row="1"
                     IsEnabled="{Binding IsUseAi}"
                     Watermark="AI 接口地址（Open API兼容）"
                     Margin="0,5"
                     Text="{Binding AiEndpoint, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
            <TextBox Grid.Row="2"
                     IsEnabled="{Binding IsUseAi}"
                     Watermark="AI 接口 Key"
                     Margin="0,5"
                     Text="{Binding AiApiKey, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
            <TextBox Grid.Row="3"
                     IsEnabled="{Binding IsUseAi}"
                     Watermark="AI 模型名称"
                     Margin="0,5"
                     Text="{Binding AiModel, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
            <TextBox Grid.Row="4"
                     IsEnabled="{Binding IsUseAi}"
                     Watermark="AI Prompt"
                     Margin="0,5"
                     Text="{Binding AiPrompt, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"/>
        </Grid>
    </Grid>
</UserControl>